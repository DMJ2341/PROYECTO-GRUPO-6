            "id": "arch1",
            "task": "Perimeter Defense",
            "subtitle": "Internet boundary",
            "icon": "shield",
            "unlock_content": {
              "title": "Design",
              "points": [
                "NGFW: Palo Alto o Fortinet ($50K/year)",
                "WAF: Cloudflare Pro ($2K/year) para e-commerce",
                "DDoS protection: Cloudflare included",
                "IDS/IPS: Suricata on firewall"
              ],
              "bonus_fact": "WAF es mandatory para PCI DSS. NGFW detecta malware, blocks C2."
            }
          },
          {
            "id": "arch2",
            "task": "DMZ + Segmentation",
            "subtitle": "Separate tiers",
            "icon": "lan",
            "unlock_content": {
              "title": "Design",
              "points": [
                "DMZ: Web servers, API gateway",
                "VLAN 10: Database servers (PCI scope)",
                "VLAN 20: Employee workstations",
                "VLAN 30: Dev/test environment",
                "VLAN 40: Guest WiFi",
                "Firewalls between VLANs, least privilege rules"
              ],
              "bonus_fact": "PCI DSS: Cardholder data must be segmented. Smaller scope = easier compliance."
            }
          },
          {
            "id": "arch3",
            "task": "Remote Access",
            "subtitle": "WFH employees",
            "icon": "vpn_key",
            "unlock_content": {
              "title": "Design",
              "points": [
                "ZTNA: Cloudflare Access ($3/user/month = $3.6K/year)",
                "MFA: Duo Security ($3/user/month = $3.6K/year)",
                "No traditional VPN (ZTNA replace)",
                "Split by role: Devs access VLAN 30, regular employees access apps only"
              ],
              "bonus_fact": "ZTNA cheaper + more secure than VPN at scale. No VPN bottleneck."
            }
          },
          {
            "id": "arch4",
            "task": "Monitoring",
            "subtitle": "Visibility",
            "icon": "monitor_heart",
            "unlock_content": {
              "title": "Design",
              "points": [
                "SIEM: Splunk Cloud ($5K/GB/year, ~$50K/year)",
                "EDR: CrowdStrike ($50/endpoint/year = $5K)",
                "Network monitoring: Zeek (free), flow analysis",
                "Log retention: 1 year (PCI requirement)"
              ],
              "bonus_fact": "SIEM is expensive pero mandatory para compliance y IR. Cloud SIEM scales better."
            }
          }
        ]
